<div class="flex items-center justify-between gap-2">
  <h1 class="text-2xl font-semibold">Dashboard</h1>
  <form method="POST" action="/admin/logout">
    <button class="rounded-xl border border-white/10 bg-white/5 px-4 py-2 text-sm hover:bg-white/10 transition">Logout</button>
  </form>
</div>

<div class="mt-5 grid grid-cols-1 sm:grid-cols-3 gap-3">
  <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
    <div class="text-zinc-400 text-sm">Total Visits</div>
    <div class="text-3xl font-semibold mt-1"><%= stats.totalVisits %></div>
  </div>
  <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
    <div class="text-zinc-400 text-sm">Movies</div>
    <div class="text-3xl font-semibold mt-1"><%= stats.totalMovies %></div>
  </div>
  <div class="rounded-2xl border border-white/10 bg-white/5 p-4">
    <div class="text-zinc-400 text-sm">Total Views</div>
    <div class="text-3xl font-semibold mt-1"><%= stats.totalViews %></div>
  </div>
</div>

<div class="mt-6 rounded-3xl border border-white/10 bg-white/5 p-4 sm:p-6">
  <div class="flex items-center justify-between">
    <div>
      <div class="font-semibold">Visits (14 hari)</div>
      <div class="text-sm text-zinc-400">Trend traffic</div>
    </div>
    <div class="flex gap-2">
      <a href="/admin/settings" class="rounded-xl border border-white/10 bg-white/5 px-4 py-2 text-sm hover:bg-white/10 transition">Settings</a>
      <a href="/admin/movies" class="rounded-xl border border-white/10 bg-white/5 px-4 py-2 text-sm hover:bg-white/10 transition">Movies</a>
    </div>
  </div>

  <div class="mt-4">
    <canvas id="visitChart" height="90"></canvas>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
<script>
  window.__visitChartData = <%- JSON.stringify(chart || []) %>;
</script>
