<div class="max-w-md mx-auto pt-10">
  <div class="rounded-3xl border border-white/10 bg-white/5 p-6 sm:p-8 shadow-2xl shadow-fuchsia-500/10" data-aos="zoom-in">
    <h1 class="text-2xl font-semibold">Admin Login</h1>
    <p class="text-zinc-400 text-sm mt-1">Masuk untuk kelola embed & ads.</p>

    <% if (String((req && req.query && req.query.err) || "") === "1") { %>
      <div class="mt-4 rounded-2xl border border-red-500/20 bg-red-500/10 px-4 py-3 text-sm text-red-200">
        Email atau password salah.
      </div>
    <% } %>

    <form class="mt-5 space-y-3" method="POST" action="/admin/login">
      <input name="email" type="email" required placeholder="Email"
             class="w-full rounded-2xl border border-white/10 bg-zinc-950/40 px-4 py-3 outline-none focus:ring-2 focus:ring-fuchsia-500/40"/>
      <input name="password" type="password" required placeholder="Password"
             class="w-full rounded-2xl border border-white/10 bg-zinc-950/40 px-4 py-3 outline-none focus:ring-2 focus:ring-fuchsia-500/40"/>
      <button class="w-full rounded-2xl bg-white text-zinc-900 font-semibold py-3 hover:opacity-90 transition">
        Login
      </button>
    </form>
  </div>
</div>
